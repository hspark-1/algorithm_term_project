<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>나의 여행일정</title>
	<style>
		.day-div {
			position: relative;
			float: left;
			text-align: center;
			width: 390px;
			height: auto;
			margin: 20px 39px;
			padding-top: 10px;
			padding-bottom: 50px;
			background-color: rgb(229, 229, 229);
			border-radius: 30px;
		}
		.show-day {
			position: relative;
		}
		.place-div {
			position: relative;
			width: 284px;
			height: 80px;
			margin: 10px 53px;
			border: 1px solid black;
			background-color: white;
		}
		.place-left-div {
			position: relative;
			float: left;
			width: 200px;
			height: 100%;
		}
		.place-name-p {
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
			position: relative;
			float: left;
			text-align: left;
			width: 70%;
			height: 26px;
			margin: 10px 0px 0px 10px;
		}
		.place-time-p {
			position: relative;
			float: left;
			margin: 0px;
			margin-left: 10px;
			top: -5px;
		}
		.place-right-div {
			position: relative;
			float: left;
			width: 67px;
			height: 72.5px;
			padding-top: 7.5px;
			padding-left: 17px;
		}
		.show-time-p {
			width: 50px;
			height: 65px;
			margin: 0;
		}
		.show-time-arrive {
			width: 50px;
			height: 42px;
			margin: 0;
			margin-top: 11.5px;
		}
	</style>
</head>
<body>
	{{#msg}}
	<input type="hidden" value="{{msg}}" id="get-msg">
	<script>
		var a = document.querySelector("#get-msg");
		alert(a.value);
	</script>
	{{/msg}}
	<script>
		var i = 0;
		var j = 0;
		let day = 0;
	</script>
	<div>
	{{#resultEntity}}
	<input type="hidden" value="{{move}}" id="get-move">
	<input type="hidden" value="{{day}}" id="get-day">
	<script>
		var a = document.querySelectorAll("#get-day");
		var b = document.querySelectorAll("#get-move");
		console.log(b[j].value);
		if(day != a[j].value) {
			day++;
			document.write("</div><div class=\"day-div\"><div class=\"show-day\"><h2>" + day + " 일차</h2></div>");
		} else if (j != 0) {
			document.write(b[j-1].value + "분 이동");
		}
		j++;
	</script>
	<div class="place-div">
		<div class="place-left-div">
			<p class="place-name-p">{{name}}</p><br><br>
			<input type="hidden" value="{{starttime}}" id="get-starttime">
			<input type="hidden" value="{{endtime}}" id="get-endtime">
			<script>
				var a = document.querySelectorAll("#get-starttime");
				var b = document.querySelectorAll("#get-endtime");
				var c = a[i].value.toString().split(":");
				var d = b[i].value.toString().split(":");
				c[0] = d[0] - c[0];
				c[1] = d[1] - c[1];
				if(c[1]<0) {
					c[1] = 60 + c[1];
					c[0]--;
				}
				if(c[0]==0 && c[1]==0) {
					document.write("<p class=\"place-time-p\">도착</p>");
				} else {
					document.write("<p class=\"place-time-p\">" + c[0] + "시간" + c[1] + "분</p>");
				}
				i++;
			</script>
		</div>
		<div class="place-right-div">
			<input type="hidden" value="{{starttime}}" id="get-starttime">
			<input type="hidden" value="{{endtime}}" id="get-endtime">
			<script>
				var a = document.querySelectorAll("#get-starttime");
				var b = document.querySelectorAll("#get-endtime");
				console.log(a[i].value);
				if(a[i].value == b[i].value) {
					document.write("<p class=\"show-time-arrive\">{{starttime}}<br>도착</p>");
				} else {
					document.write("<p class=\"show-time-p\">{{starttime}}<br>|<br>{{endtime}}</p>");
				}
				i++;
			</script>
		</div>
	</div>
	{{/resultEntity}}
</body>
</html>